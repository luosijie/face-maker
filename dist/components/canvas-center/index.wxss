.canvas-container {
  width: 100vw;
  height: 100vw;
  background-color: #f7f7f7;
  position: relative;
}
.canvas-container canvas {
  width: 100vw;
  height: 100vw;
}
.canvas-container .add-image {
  width: 200rpx;
  height: 280rpx;
  color: #bbb;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -100rpx;
  margin-top: -140rpx;
}
.canvas-container .add-image .image {
  width: 150rpx;
  height: 150rpx;
}
.canvas-container .add-image .label {
  margin-top: 1rem;
  font-size: 1rem;
  border: none;
  color: #999;
  padding: 0;
}