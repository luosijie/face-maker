
.menu-text {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 100%;
  position: relative;
  padding: 0 20rpx;
}
.menu-text input {
  box-sizing: border-box;
  text-align: center;
  width: 100%;
  font-size: 40rpx;
  margin-bottom: 20rpx;
  font-weight: bold;
  color: #ccc;
  border: 1rpx dashed #ccc;
  border-radius: 5rpx;
  padding: 10rpx;
  height: 90rpx;
}
.menu-text .item {
  height: 80rpx;
  display: flex;
  align-items: center;
  width: 100%;
}
.menu-text .item .label {
  color: #1e3063;
  font-size: 28rpx;
  font-weight: bold;
  width: 120rpx;
}
.menu-text .item .content {
  width: calc(100% - 120rpx);
}
.menu-text .item .colors {
  padding: 0 10rpx;
  display: flex;
  justify-content: space-between;
}
.menu-text .item .colors .color {
  box-sizing: border-box;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  border: 4rpx solid #eee;
}
.menu-text .item .colors .active {
  border-color: #1e3063;
}
