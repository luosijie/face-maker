.index {
  height: 100vh;
}
.index .canvas-container {
  width: 100vw;
  height: 100vw;
  background-color: #f7f7f7;
  position: relative;
}
.index .canvas-container canvas {
  width: 100vw;
  height: 100vw;
}
.index .canvas-container .add-image {
  width: 200rpx;
  height: 280rpx;
  color: #bbb;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -100rpx;
  margin-top: -140rpx;
}
.index .canvas-container .add-image i {
  font-size: 4rem;
}
.index .canvas-container .add-image .label {
  margin-top: 1rem;
  font-size: 1rem;
}
.index .tool-options {
  width: 100vw;
  height: calc(100% - 100vw);
  background-color: white;
  position: relative;
}
.index .tool-options .top {
  position: relative;
  width: 100%;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  padding: 0rpx 15rpx;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
  border-bottom: 1rpx dashed #eeeeee;
  height: 80rpx;
}
.index .tool-options .top .title {
  font-size: 30rpx;
}
.index .tool-options .top i {
  color: #999;
  font-size: 24rpx;
}
.index .tool-options .main {
  width: 100%;
  height: calc(100% - 80rpx);
  background: #eee;
}